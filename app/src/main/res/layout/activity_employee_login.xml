<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.luthf.pointofsale.EmployeeLogin">
    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView

                android:layout_marginTop="50dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/pasphoto"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:id="@+id/pasfoto"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:hint="Employee Name"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText10"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/pasfoto"
                android:layout_toEndOf="@+id/pasfoto" />
            <GridView
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/gv_item"
                android:layout_width="match_parent"
                android:layout_height="410dp"
                android:columnWidth="10dp"
                android:numColumns="5"
                android:gravity="center"
                android:layout_below="@+id/pasfoto">
            </GridView>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:id="@+id/calc"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">
            <TextView
                android:layout_marginTop="10dp"
                android:textSize="40dp"
                android:gravity="right"
                android:textAlignment="gravity"
                android:fontFamily="sans-serif"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/result"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout"
                android:layout_below="@+id/result"
                android:layout_centerHorizontal="true">

                <Button
                    android:onClick="onButtonClick"
                    android:layout_marginRight="25dp"
                    android:textSize="50dp"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:id="@+id/number1" />

                <Button
                    android:onClick="onButtonClick"
                    android:textSize="50dp"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:id="@+id/number2" />

                <Button
                    android:onClick="onButtonClick"
                    android:layout_marginLeft="25dp"
                    android:textSize="50dp"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:id="@+id/number3" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:id="@+id/linearLayout2">

                <Button
                    android:onClick="onButtonClick"
                    android:layout_marginRight="25dp"
                    android:textSize="50dp"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:id="@+id/number4" />

                <Button
                    android:onClick="onButtonClick"
                    android:textSize="50dp"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:id="@+id/number5" />

                <Button
                    android:onClick="onButtonClick"
                    android:layout_marginLeft="25dp"
                    android:textSize="50dp"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:id="@+id/number6" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout2"
                android:layout_centerHorizontal="true"
                android:id="@+id/linearLayout3">

                <Button
                    android:onClick="onButtonClick"
                    android:layout_marginRight="25dp"
                    android:textSize="50dp"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:id="@+id/number7" />

                <Button
                    android:onClick="onButtonClick"
                    android:textSize="50dp"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:id="@+id/number8" />

                <Button
                    android:onClick="onButtonClick"
                    android:layout_marginLeft="25dp"
                    android:textSize="50dp"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:id="@+id/number9" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="70dp"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout3"
                android:layout_centerHorizontal="true"
                android:weightSum="1">

                <Button
                    android:onClick="onButtonClick"
                    android:textSize="50dp"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/number0" />

                <Button
                    android:layout_gravity="center"
                    android:textAlignment="gravity"
                    android:layout_marginRight="30dp"
                    android:textSize="30dp"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Del"
                    android:id="@+id/buttonDel"
                    android:layout_weight="0.29" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
