<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.luthf.pointofsale.Done">

    <ImageView
        android:layout_marginTop="10dp"
        android:background="@drawable/success"
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PAYMENT SUCCESS"
        android:id="@+id/textView3"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textSize="40dp"
        android:textColor="@android:color/black"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Rp50120"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Would you like a receipt?"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:id="@+id/relatif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true">

        <EditText
            android:textColorHint="#C9C9C9"
            android:hint="Type your email address"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText2"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:padding="5dp"
            android:textSize="13dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Send"
            android:id="@+id/send"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/editText2"
            android:layout_toEndOf="@+id/editText2" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="18dp"
        android:layout_below="@+id/textView5"
        android:visibility="gone"
        android:id="@+id/relatifpop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:textSize="20dp"
            android:textColor="#C9C9C9"
            android:text="Receipt has been sent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sent"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_marginLeft="10dp"
            android:background="@drawable/ceklist"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/sentimage"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/sent" />
    </RelativeLayout>

    <Button
        android:layout_marginTop="35dp"
        android:textColor="@android:color/white"
        android:background="@drawable/charge"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="Print Receipt"
        android:id="@+id/button2"
        android:layout_below="@+id/relatif"
        android:layout_centerHorizontal="true" />

    <Button
        android:background="@drawable/charge1"
        android:layout_marginTop="10dp"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="New Sale"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
